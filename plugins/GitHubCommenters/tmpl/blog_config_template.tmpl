<mtapp:setting
    id="GitHub_app_key"
    label="<__trans phrase="GitHub Application Key">"
    hint="<__trans phrase="The key for the GitHub application associated with your blog.">"
    show_hint="1">
    <input type="text" name="GitHub_app_key" id="GitHub_app_key" value="<mt:var name="GitHub_app_key" escape="html">" size="40" />
    <mt:if name="GitHub_app_key"><a href="https://github.com/settings/developers" target="_blank"><__trans phrase="Register a new OAuth application on GitHub"></a><mt:else><a href="https://github.com/settings/applications/new" target="_blank"><__trans phrase="Register a new OAuth application on GitHub"></a></mt:if>
</mtapp:setting>
<mtapp:setting
    id="GitHub_app_secret"
    label="<__trans phrase="GitHub Application Secret">"
    hint="<__trans phrase="The secret for the GitHub application associated with your blog.">"
    show_hint="1">
    <input type="text" name="GitHub_app_secret" id="GitHub_app_secret" value="<mt:var name="GitHub_app_secret" escape="html">" size="40" />
</mtapp:setting>
